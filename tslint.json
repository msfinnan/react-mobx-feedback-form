{
    "extends": [
      "tslint:recommended",
      "tslint-eslint-rules",
      "tslint-react"
    ],
    "rules": {
      "array-type": [true, "array"],
      "brace-style": [
          true,
          "stroustrup",
          {
            "allowSingleLine": true
          }
      ],
      "eofline": false,
      "forin": false,
      "indent": [ true, "spaces", 4 ],
      "interface-name": false,
      "jsdoc-format": false,
      "jsx-no-lambda": false,
      "jsx-no-multiline-js": false,
      "jsx-wrap-multiline": false,
      "max-classes-per-file": false,
      "max-line-length": [true, 500],
      "no-bitwise": false,
      "no-console": [
        true,
        "debug",
        "info",
        "time",
        "timeEnd",
        "trace"
      ],
      "no-namespace": false,
      "no-unused-expression": false,
      "one-line": [
        true,
        "check-open-brace",
        "check-whitespace"
      ],
      "object-literal-sort-keys": false,
      "object-literal-key-quotes": false,
      "trailing-comma": false,
      "typedef": [
        true,
        "callSignature",
        "parameter",
        "property-declaration"
      ],
      "typedef-whitespace": [
        true,
        {
          "call-signature": "nospace",
          "index-signature": "nospace"
        }
      ],
      "variable-name": false,
      "whitespace": [
        false,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type"
      ]
    },
    "linterOptions": {
      "exclude": [
        ".././**/mcuxlib/**"
      ]
    }
  }